<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Batch Intake Form View -->
        <record id="view_batch_intake_form" model="ir.ui.view">
            <field name="name">batch.intake.form</field>
            <field name="model">batch.intake</field>
            <field name="arch" type="xml">
                <form string="Batch Intake">
                    <header>
                        <button name="action_upload_file" string="Upload File" type="object" class="btn-primary" 
                                invisible="state != 'draft' or not file_data"/>
                        <button name="action_validate_file" string="Validate File" type="object" class="btn-primary" 
                                invisible="state != 'uploaded'"/>
                        <button name="action_process_file" string="Process File" type="object" class="btn-primary" 
                                invisible="state != 'validated'"/>
                        <button name="action_reset" string="Reset" type="object" class="btn-secondary" 
                                invisible="state not in ['draft', 'error']"/>
                        <button name="action_download_template" string="Download Template" type="object" class="btn-info" 
                                invisible="state != 'draft'"/>
                        <button name="action_open" string="Open" type="object" class="btn-primary" 
                                invisible="state != 'processed'"/>
                        <button name="action_close" string="Close" type="object" class="btn-primary" 
                                invisible="state != 'open'"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" 
                                invisible="state in ['closed', 'cancelled']"/>
                        <button name="action_view_students" string="View Students" type="object" class="btn-info" 
                                invisible="current_enrollment == 0"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,uploaded,validated,processed,open,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <div class="oe_stat_button" icon="fa-users">
                                <field name="current_enrollment" widget="statinfo" string="Enrolled"/>
                            </div>
                            <div class="oe_stat_button" icon="fa-user-plus" 
                                 invisible="max_capacity == 0">
                                <field name="available_slots" widget="statinfo" string="Available"/>
                            </div>
                            <div class="oe_stat_button" icon="fa-file" 
                                 invisible="total_records == 0">
                                <field name="total_records" widget="statinfo" string="Records"/>
                            </div>
                            <div class="oe_stat_button" icon="fa-exclamation-triangle" 
                                 invisible="error_records == 0">
                                <field name="error_records" widget="statinfo" string="Errors"/>
                            </div>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <!-- File Upload Section -->
                        <group string="File Upload" invisible="state not in ['draft', 'uploaded', 'validated', 'processed', 'error']">
                            <group>
                                <field name="upload_date" required="1"/>
                                <field name="filename" readonly="state != 'draft'"/>
                                <field name="file_data" widget="binary" filename="filename" invisible="state != 'draft'"/>
                                <field name="file_type" readonly="1"/>
                                <field name="file_size" readonly="1" invisible="file_size == 0"/>
                            </group>
                            <group>
                                <field name="total_records" readonly="1"/>
                                <field name="processed_records" readonly="1"/>
                                <field name="error_records" readonly="1"/>
                                <field name="success_rate" readonly="1" widget="progressbar"/>
                            </group>
                        </group>
                        
                        <!-- Progress Tracking Section -->
                        <group string="Progress Tracking" invisible="state == 'draft'">
                            <group>
                                <field name="current_stage" readonly="1" widget="text" class="font-weight-bold"/>
                                <field name="progress_percentage" readonly="1" widget="progressbar"/>
                            </group>
                        </group>
                        
                        <!-- Notification Settings -->
                        <group string="Notification Settings">
                            <group>
                                <field name="email_notification_enabled"/>
                                <field name="in_app_notification_enabled"/>
                            </group>
                            <group>
                                <field name="notification_sent" readonly="1"/>
                                <field name="notification_type" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- OpenEduCat Integration Section -->
                        <group string="OpenEduCat Enrollment">
                            <group>
                                <field name="course_id"/>
                                <field name="batch_id" domain="[('course_id', '=', course_id)]"/>
                                <field name="academic_year_id"/>
                                <field name="academic_term_id"/>
                            </group>
                        </group>
                        
                        <!-- Batch Details Section -->
                        <group string="Batch Details">
                            <group>
                                <field name="code" readonly="1"/>
                                <field name="start_date" required="1"/>
                                <field name="end_date" required="1"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="max_capacity"/>
                                <field name="current_enrollment" readonly="1"/>
                                <field name="available_slots" readonly="1" invisible="max_capacity == 0"/>
                                <field name="enrollment_percentage" readonly="1" widget="progressbar" 
                                       invisible="max_capacity == 0"/>
                            </group>
                        </group>
                        
                        <group string="Description">
                            <field name="description" placeholder="Enter batch description..."/>
                        </group>
                        
                        <notebook>
                            <page string="File Details" invisible="state == 'draft'">
                                <group>
                                    <group>
                                        <field name="upload_date" readonly="1"/>
                                        <field name="validation_date" readonly="1"/>
                                        <field name="processing_date" readonly="1"/>
                                    </group>
                                </group>
                                
                                <group string="Validation Results" invisible="state == 'draft'">
                                    <field name="validation_errors" widget="text" readonly="1" 
                                           invisible="not validation_errors" 
                                           placeholder="No validation errors"/>
                                    <field name="validation_warnings" widget="text" readonly="1" 
                                           invisible="not validation_warnings" 
                                           placeholder="No validation warnings"/>
                                </group>
                            </page>
                            
                            <page string="Students" name="students">
                                <field name="openeducat_student_ids" readonly="0">
                                    <list>
                                        <field name="name"/>
                                        <field name="gr_no"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                        <field name="course_detail_ids" widget="many2many_tags"/>
                                        <field name="create_date"/>
                                    </list>
                                </field>
                            </page>
                            
                            <page string="Partners" name="partners" invisible="not student_ids">
                                <field name="student_ids" readonly="0">
                                    <list>
                                        <field name="name"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                        <field name="create_date"/>
                                    </list>
                                </field>
                            </page>
                            
                            <page string="Activities" name="activities">
                                <field name="activity_ids" nolabel="1">
                                    <list>
                                        <field name="summary"/>
                                        <field name="activity_type_id"/>
                                        <field name="date_deadline"/>
                                        <field name="user_id"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Batch Intake List View -->
        <record id="view_batch_intake_list" model="ir.ui.view">
            <field name="name">batch.intake.list</field>
            <field name="model">batch.intake</field>
            <field name="arch" type="xml">
                <list string="Batch Intakes" default_order="create_date desc">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="max_capacity"/>
                    <field name="current_enrollment"/>
                    <field name="available_slots" invisible="max_capacity == 0"/>
                    <field name="enrollment_percentage" widget="progressbar" invisible="max_capacity == 0"/>
                    <field name="state" widget="badge" decoration-success="state == 'open'" 
                           decoration-warning="state == 'closed'" decoration-danger="state == 'cancelled'" 
                           decoration-muted="state == 'draft'"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>

        <!-- Batch Intake Kanban View -->
        <record id="view_batch_intake_kanban" model="ir.ui.view">
            <field name="name">batch.intake.kanban</field>
            <field name="model">batch.intake</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="max_capacity"/>
                    <field name="current_enrollment"/>
                    <field name="available_slots"/>
                    <field name="enrollment_percentage"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="code"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_details">
                                            <div class="o_kanban_record_middle">
                                                <div class="dates">
                                                    <i class="fa fa-calendar"/> 
                                                    <span t-esc="record.start_date.value"/> - 
                                                    <span t-esc="record.end_date.value"/>
                                                </div>
                                                <div class="enrollment-info" t-if="record.max_capacity.value > 0">
                                                    <div class="progress-bar">
                                                        <field name="enrollment_percentage" widget="progressbar"/>
                                                    </div>
                                                    <div class="enrollment-stats">
                                                        <span>Enrolled: <field name="current_enrollment"/></span>
                                                        <span>Available: <field name="available_slots"/></span>
                                                    </div>
                                                </div>
                                                <div class="enrollment-info" t-if="record.max_capacity.value == 0">
                                                    <span>Enrolled: <field name="current_enrollment"/></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

