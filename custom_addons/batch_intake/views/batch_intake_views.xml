        <!-- Batch Intake Action -->
        <record id="action_batch_intake" model="ir.actions.act_window">
            <field name="name">Batch Intakes</field>
            <field name="res_model">batch.intake</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first batch intake!
                </p>
                <p>
                    Batch intakes allow you to manage student enrollment in training programs.
                    Start by creating a new batch intake and setting the enrollment period.
                </p>
            </field>
