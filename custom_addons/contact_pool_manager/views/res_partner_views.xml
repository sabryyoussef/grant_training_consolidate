<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Smart Button to Partner Form View -->
    <record id="view_partner_form_inherit_pool" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.pool</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add pool_id field in contact form -->
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="pool_id"/>
            </xpath>
            
            <!-- Add smart button for pool -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_pool_contacts" type="object" 
                        class="oe_stat_button" icon="fa-users"
                        invisible="not pool_id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Pool</span>
                        <span class="o_stat_value" invisible="not pool_id">
                            <field name="pool_id" readonly="1"/>
                        </span>
                    </div>
                </button>
            </xpath>
            
            <!-- Add activity tracking fields - add to sheet after pool_id field -->
            <xpath expr="//field[@name='pool_id']" position="after">
                <group string="Activity Tracking" name="activity_tracking" col="2">
                    <field name="last_activity_date" readonly="1"/>
                    <field name="days_since_activity" readonly="1"/>
                    <field name="activity_count" readonly="1"/>
                    <button name="action_view_activities" string="View Activities" type="object" class="btn-secondary"/>
                    <button name="action_schedule_followup" string="Schedule Follow-up" type="object" class="btn-primary"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Add pool_id to Partner List View -->
    <record id="view_partner_list_inherit_pool" model="ir.ui.view">
        <field name="name">res.partner.list.inherit.pool</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                <field name="pool_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Add pool filter to Partner Search View -->
    <record id="view_partner_search_inherit_pool" model="ir.ui.view">
        <field name="name">res.partner.search.inherit.pool</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <!-- Add pool filter - use a safer xpath -->
            <xpath expr="//group" position="inside">
                <filter string="By Pool" name="by_pool" context="{'group_by': 'pool_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>

