<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Form View -->
    <record id="view_course_enrollment_request_form" model="ir.ui.view">
        <field name="name">course.enrollment.request.form</field>
        <field name="model">course.enrollment.request</field>
        <field name="arch" type="xml">
            <form string="Course Enrollment Request">
                <header>
                    <button name="action_submit" string="Submit" type="object" 
                            class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    <button name="action_set_pending" string="Set to Pending" type="object" 
                            class="oe_highlight" 
                            invisible="state != 'submitted'"
                            groups="openeducat_core.group_op_back_office_admin,openeducat_core.group_op_faculty"/>
                    <button name="action_approve" string="Approve" type="object" 
                            class="oe_highlight" 
                            invisible="state not in ['submitted', 'pending']"
                            groups="openeducat_core.group_op_back_office_admin,openeducat_core.group_op_faculty"/>
                    <button name="action_reject" string="Reject" type="object" 
                            invisible="state not in ['submitted', 'pending']"
                            groups="openeducat_core.group_op_back_office_admin,openeducat_core.group_op_faculty"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,pending,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Request Information">
                            <field name="student_id" readonly="state != 'draft'"/>
                            <field name="course_id" readonly="state != 'draft'"/>
                            <field name="batch_id" readonly="state != 'draft'"/>
                            <field name="request_date" readonly="1"/>
                        </group>
                        <group string="Review Information" groups="openeducat_core.group_op_back_office_admin,openeducat_core.group_op_faculty">
                            <field name="approved_by" readonly="1"/>
                            <field name="approval_date" readonly="1"/>
                            <field name="student_course_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="Rejection Reason" invisible="state != 'rejected'">
                        <field name="rejection_reason" readonly="state != 'rejected'"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- List View -->
    <record id="view_course_enrollment_request_tree" model="ir.ui.view">
        <field name="name">course.enrollment.request.list</field>
        <field name="model">course.enrollment.request</field>
        <field name="arch" type="xml">
            <list string="Course Enrollment Requests" 
                  decoration-info="state == 'draft'" 
                  decoration-warning="state in ['submitted', 'pending']" 
                  decoration-success="state == 'approved'" 
                  decoration-danger="state == 'rejected'">
                <field name="name"/>
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="batch_id"/>
                <field name="request_date"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'"
                       decoration-warning="state in ['submitted', 'pending']"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'rejected'"/>
            </list>
        </field>
    </record>
    
    <!-- Kanban View -->
    <record id="view_course_enrollment_request_kanban" model="ir.ui.view">
        <field name="name">course.enrollment.request.kanban</field>
        <field name="model">course.enrollment.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="student_id"/>
                                    <field name="course_id"/>
                                    <field name="request_date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
