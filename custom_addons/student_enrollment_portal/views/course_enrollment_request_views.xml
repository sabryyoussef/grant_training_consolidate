    <!-- Action: All Requests -->
    <record id="action_course_enrollment_request" model="ir.actions.act_window">
        <field name="name">Course Enrollment Requests</field>
        <field name="res_model">course.enrollment.request</field>
        <field name="view_mode">list,form,kanban</field>
        <!-- <field name="search_view_id" ref="view_course_enrollment_request_search"/> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No enrollment requests yet!
            </p>
            <p>
                Students can request enrollment in courses through the portal.
            </p>
        </field>
    </record>
    
    <!-- Action: Pending Requests -->
    <record id="action_course_enrollment_request_pending" model="ir.actions.act_window">
        <field name="name">Pending Enrollment Requests</field>
        <field name="res_model">course.enrollment.request</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="domain">[('state', 'in', ['submitted', 'pending'])]</field>
        <!-- <field name="search_view_id" ref="view_course_enrollment_request_search"/> -->
        <field name="context">{'search_default_pending': 1, 'search_default_submitted': 1}</field>
    </record>
    
    <!-- Action: Approved Requests -->
    <record id="action_course_enrollment_request_approved" model="ir.actions.act_window">
        <field name="name">Approved Enrollment Requests</field>
        <field name="res_model">course.enrollment.request</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="domain">[('state', '=', 'approved')]</field>
        <!-- <field name="search_view_id" ref="view_course_enrollment_request_search"/> -->
        <field name="context">{'search_default_approved': 1}</field>
    </record>
    
    <!-- Menu Items -->
    <menuitem id="menu_course_enrollment_request_root"
              name="Enrollment Requests"
              parent="student_enrollment_portal.menu_student_registrations_root"
              sequence="30"
              action="action_course_enrollment_request"/>
    
    <menuitem id="menu_course_enrollment_request_all"
              name="All Requests"
              parent="menu_course_enrollment_request_root"
              action="action_course_enrollment_request"
              sequence="10"/>
    
    <menuitem id="menu_course_enrollment_request_pending"
              name="Pending Requests"
              parent="menu_course_enrollment_request_root"
              action="action_course_enrollment_request_pending"
              sequence="20"/>
    
    <menuitem id="menu_course_enrollment_request_approved"
              name="Approved Requests"
              parent="menu_course_enrollment_request_root"
              action="action_course_enrollment_request_approved"
              sequence="30"/>
    
</odoo>

