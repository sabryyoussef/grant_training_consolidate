<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Portal users can only see their own registrations -->
        <record id="student_registration_portal_rule" model="ir.rule">
            <field name="name">Student Registration: Portal User Access</field>
            <field name="model_id" ref="model_student_registration"/>
            <field name="domain_force">[('email', '=', user.email)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Managers and Faculty can see all registrations -->
        <record id="student_registration_manager_faculty_rule" model="ir.rule">
            <field name="name">Student Registration: Manager and Faculty Access</field>
            <field name="model_id" ref="model_student_registration"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('openeducat_core.group_op_back_office_admin')), (4, ref('openeducat_core.group_op_faculty'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Portal users can only see their own enrollment requests -->
        <record id="course_enrollment_request_portal_rule" model="ir.rule">
            <field name="name">Course Enrollment Request: Portal User Access</field>
            <field name="model_id" ref="model_course_enrollment_request"/>
            <field name="domain_force">[('student_id.partner_id.user_ids', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Managers and Faculty can see all enrollment requests -->
        <record id="course_enrollment_request_manager_faculty_rule" model="ir.rule">
            <field name="name">Course Enrollment Request: Manager and Faculty Access</field>
            <field name="model_id" ref="model_course_enrollment_request"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('openeducat_core.group_op_back_office_admin')), (4, ref('openeducat_core.group_op_faculty'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
    </data>
</odoo>

