<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Program Catalog Page -->
    <template id="programs_catalog" name="Programs Catalog">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <section class="s_cover pt48 pb48" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center text-white">
                                <h1 class="display-4 mb-3">
                                    <i class="fas fa-graduation-cap"/> Training Programs
                                </h1>
                                <p class="lead mb-4">Professional Certification &amp; Courses</p>
                            </div>
                        </div>
                    </div>
                </section>
                
                <section class="pt48 pb48">
                    <div class="container">
                        <t t-if="programs">
                            <div class="row">
                                <t t-foreach="programs" t-as="program">
                                    <div class="col-md-6 col-lg-4 mb-4">
                                        <div class="card h-100 shadow-sm motakamel_program_card">
                                            <!-- Program Placeholder -->
                                            <div class="program-placeholder">
                                                <i class="fas fa-graduation-cap"/>
                                            </div>
                                            
                                            <div class="card-body d-flex flex-column">
                                                <!-- Program Status Badge -->
                                                <div class="mb-2" t-if="program.status">
                                                    <span t-attf-class="badge bg-#{program.status == 'published' and 'success' or (program.status == 'approved' and 'info' or 'warning')} me-1">
                                                        <i t-attf-class="fa fa-#{program.status == 'published' and 'check-circle' or (program.status == 'approved' and 'check' or 'clock-o')}"/> 
                                                        <t t-esc="program.status == 'published' and 'Published' or (program.status == 'approved' and 'Approved' or (program.status == 'draft' and 'Draft' or program.status))"/>
                                                    </span>
                                                </div>
                                                
                                                <h5 class="card-title text-primary">
                                                    <i class="fa fa-certificate"/> <t t-esc="program.program_name"/>
                                                </h5>
                                                <p class="card-text text-muted mb-2" t-if="program.program_code">
                                                    <strong>Code:</strong> <t t-esc="program.program_code"/>
                                                </p>
                                                
                                                <!-- Program Description -->
                                                <div class="card-text text-muted mb-2 small program-description-preview" t-if="program.description_en">
                                                    <t t-raw="program.description_en"/>
                                                </div>
                                                
                                                <!-- Provider Info -->
                                                <div class="mb-2" t-if="program.provider_name">
                                                    <small class="text-muted">
                                                        <i class="fa fa-building"/> <t t-esc="program.provider_name"/>
                                                        <t t-if="program.provider_type"> (<t t-esc="program.provider_type"/>)</t>
                                                    </small>
                                                </div>
                                                
                                                <!-- Delivery Options Info -->
                                                <div class="mb-2" t-if="program.delivery_count">
                                                    <small class="text-muted">
                                                        <i class="fa fa-calendar"/> 
                                                        <t t-esc="program.delivery_count"/> delivery option(s) available
                                                    </small>
                                                </div>
                                                
                                                <!-- Pricing Info -->
                                                <div class="mb-2" t-if="program.pricing_ids">
                                                    <small class="text-muted">
                                                        <i class="fa fa-dollar-sign"/> 
                                                        Starting from <t t-esc="program.pricing_ids[0].currency_id.symbol"/><t t-esc="program.pricing_ids[0].final_price"/>
                                                    </small>
                                                </div>
                                                
                                                <div class="mb-2">
                                                    <span class="badge bg-primary me-1 mb-1" t-esc="program.program_category"/>
                                                    <span class="badge bg-info me-1 mb-1" t-esc="program.program_level"/>
                                                </div>
                                                
                                                <t t-if="program.program_name_ar">
                                                    <p class="card-text mb-3" dir="rtl" style="color: #666; font-size: 0.9em;" t-esc="program.program_name_ar"/>
                                                </t>
                                                
                                                <div class="mt-auto pt-3">
                                                    <a t-attf-href="/programs/#{program.id}" class="btn btn-primary btn-sm w-100">
                                                        <i class="fa fa-info-circle"/> View Details
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </t>
                        <t t-if="not programs">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <div class="alert alert-info">
                                        <h4>No Programs Available</h4>
                                        <p>There are currently no published programs available. Please check back later.</p>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </section>
            </div>
        </t>
    </template>
    
    <!-- Program Detail Page -->
    <template id="program_detail" name="Program Detail">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <section class="pt48 pb48">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8">
                                <h1 class="program_name" t-esc="program.program_name"/>
                                <h3 class="text-muted program_name_ar" dir="rtl" t-esc="program.program_name_ar"/>
                                <p><strong>Code:</strong> <span t-esc="program.program_code"/></p>
                                <p><strong>Provider:</strong> <span t-esc="program.provider_name"/></p>
                                
                                <div class="mt-4">
                                    <h4>Description</h4>
                                    <div class="description_en" t-field="program.description_en"/>
                                </div>
                                
                                <div class="mt-4" t-if="program.accreditation_ids">
                                    <h4>Accreditations</h4>
                                    <ul>
                                        <t t-foreach="program.accreditation_ids" t-as="acc">
                                            <li><span t-esc="acc.accreditation_code"/> - <span t-esc="acc.international_accreditation_body or acc.local_accreditation_body"/></li>
                                        </t>
                                    </ul>
                                </div>
                                
                                <div class="mt-4" t-if="program.course_ids">
                                    <h4>Related Courses</h4>
                                    <div class="row">
                                        <t t-foreach="program.course_ids" t-as="course">
                                            <div class="col-md-6 mb-3">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <h6 class="card-title">
                                                            <i class="fa fa-book"/> <t t-esc="course.name"/>
                                                        </h6>
                                                        <p class="card-text text-muted mb-2" t-if="course.code">
                                                            <strong>Code:</strong> <t t-esc="course.code"/>
                                                        </p>
                                                        <a t-attf-href="/courses/#{course.id}" class="btn btn-sm btn-outline-primary">
                                                            <i class="fa fa-info-circle"/> View Course
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-lg-4">
                                <div class="card motakamel_enroll_card">
                                    <div class="card-body">
                                        <h5 class="card-title">Enroll Now</h5>
                                        <t t-if="program.pricing_ids">
                                            <p class="h3 text-primary motakamel_price">
                                                <span t-esc="program.pricing_ids[0].currency_id.symbol"/>
                                                <span t-esc="program.pricing_ids[0].final_price"/>
                                            </p>
                                        </t>
                                        <t t-if="has_enrollment_module">
                                            <a t-attf-href="/student/register?program_id=#{program.id}" class="btn btn-primary btn-block">
                                                <i class="fa fa-user-plus"/> Register Now
                                            </a>
                                        </t>
                                        <t t-if="not has_enrollment_module">
                                            <a href="/contactus" class="btn btn-primary btn-block">
                                                <i class="fa fa-envelope"/> Contact Us
                                            </a>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
    
    <!-- Website Menu: Programs (E-Learning) -->
    <record id="menu_programs" model="website.menu">
        <field name="name">Programs</field>
        <field name="url">/programs</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">50</field>
    </record>
    
</odoo>
