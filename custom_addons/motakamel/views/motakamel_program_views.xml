    <!-- Program Action -->
    <record id="action_motakamel_program" model="ir.actions.act_window">
        <field name="name">Training Programs</field>
        <field name="res_model">motakamel.program</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first training program
            </p>
            <p>
                Define comprehensive training programs with accreditations, pricing, delivery options, and more.
            </p>
