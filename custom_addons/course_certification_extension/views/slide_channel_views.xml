    <!-- Accreditation Body Form View -->
    <record id="view_accreditation_body_form" model="ir.ui.view">
        <field name="name">course.accreditation.body.form</field>
        <field name="model">course.accreditation.body</field>
        <field name="arch" type="xml">
            <form string="Accreditation Body">
                <sheet>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Accreditation Body Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name_arabic" placeholder="ÿßŸÑÿßÿ≥ŸÖ ÿ®ÿßŸÑÿπÿ±ÿ®Ÿä"/>
                            <field name="website" widget="url" placeholder="https://www.example.com"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Description of the accreditation body..."/>
                        </page>
                        <page string="Accredited Courses">
                            <field name="course_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Accreditation Body List View -->
    <record id="view_accreditation_body_list" model="ir.ui.view">
        <field name="name">course.accreditation.body.list</field>
        <field name="model">course.accreditation.body</field>
        <field name="arch" type="xml">
            <list string="Accreditation Bodies">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="name_arabic"/>
                <field name="website"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <!-- Accreditation Body Action -->
    <record id="action_accreditation_body" model="ir.actions.act_window">
        <field name="name">Accreditation Bodies</field>
        <field name="res_model">course.accreditation.body</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first accreditation body
            </p>
            <p>
                Add local and international accreditation bodies that certify your courses.
            </p>
        </field>
    </record>
    
    <!-- Menu Item for Accreditation Bodies -->
    <menuitem id="menu_accreditation_body"
              name="Accreditation Bodies"
              parent="website_slides.website_slides_menu_configuration"
              action="action_accreditation_body"
              sequence="50"/>

</odoo>
