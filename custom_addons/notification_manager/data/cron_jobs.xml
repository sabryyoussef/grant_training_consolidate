<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Milestone Notifications -->
        <record id="ir_cron_milestone_notifications" model="ir.cron">
            <field name="name">Create Milestone Notifications</field>
            <field name="model_id" ref="model_notification_manager"/>
            <field name="state">code</field>
            <field name="code">model.create_milestone_notifications()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>
        
        <!-- Stalled Progress Alerts -->
        <record id="ir_cron_stalled_progress_alerts" model="ir.cron">
            <field name="name">Stalled Progress Alerts</field>
            <field name="model_id" ref="model_notification_manager"/>
            <field name="state">code</field>
            <field name="code">model.create_stalled_progress_alerts()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>
        
        <!-- Completion Notifications -->
        <record id="ir_cron_completion_notifications" model="ir.cron">
            <field name="name">Completion Notifications</field>
            <field name="model_id" ref="model_notification_manager"/>
            <field name="state">code</field>
            <field name="code">model.create_completion_notifications()</field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>
        
        <!-- Notification Cleanup -->
        <record id="ir_cron_notification_cleanup" model="ir.cron">
            <field name="name">Notification Cleanup</field>
            <field name="model_id" ref="model_notification_manager"/>
            <field name="state">code</field>
            <field name="code">model.cleanup_old_notifications()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>
    </data>
</odoo>

