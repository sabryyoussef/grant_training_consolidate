<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Notification Email Template -->
        <record id="email_template_notification" model="mail.template">
            <field name="name">Notification</field>
            <field name="model_id" ref="model_notification_manager"/>
            <field name="subject">${object.name}</field>
            <field name="email_from">${(object.company_id.email or user.email_formatted) | safe}</field>
            <field name="email_to">${object.recipient_email | safe}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div style="margin: 0px; padding: 0px; font-size: 13px;">
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
                            ${object.message | safe}
                        </p>
                        <br/>
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
                            <strong>Notification Type:</strong> ${object.notification_type}<br/>
                            <strong>Priority:</strong> ${object.priority}<br/>
                            <t t-if="object.progress_value">
                                <strong>Progress:</strong> ${object.progress_value}%<br/>
                            </t>
                            <t t-if="object.trigger_condition">
                                <strong>Trigger:</strong> ${object.trigger_condition}<br/>
                            </t>
                        </p>
                        <br/>
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
                            This is an automated notification from the Notification Manager system.
                        </p>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>

