<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Extend Batch Intake Form View -->
    <record id="view_batch_intake_form_inherit" model="ir.ui.view">
        <field name="name">batch.intake.form.inherit</field>
        <field name="model">batch.intake</field>
        <field name="inherit_id" ref="batch_intake.view_batch_intake_form"/>
        <field name="arch" type="xml">
            <!-- Add button to create admissions -->
            <xpath expr="//header" position="inside">
                <button name="action_create_admissions_from_students" 
                        string="Create Admissions" 
                        type="object" 
                        class="oe_highlight" 
                        invisible="state != 'processed' or not openeducat_student_ids"
                        groups="openeducat_core.group_op_back_office_admin"/>
            </xpath>
        </field>
    </record>
    
</odoo>

